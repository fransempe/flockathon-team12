---
import RightArrowIcon from "@components/icons/RightArrowIcon.astro";
import Posts from "@layouts/Posts.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort(
(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---
<div class="m-auto">
  <h1 class="font-bold mb-4">Cursos finalizados</h1>
  <Posts posts={posts} />
  <div class="text-end mt-10">
    <a
      class="inline-block rounded border border-indigo-600 dark:border-indigo-400 dark:hover:border-indigo-600 px-12 py-3 text-sm font-medium text-indigo-600 dark:text-indigo-400 dark:hover:text-white hover:bg-indigo-600 hover:text-white focus:outline-none focus:ring active:bg-indigo-500 transition-all"
      href="/"
    >
      MÃ¡s cursos
      <RightArrowIcon />
    </a>
  </div>
  
</div>
